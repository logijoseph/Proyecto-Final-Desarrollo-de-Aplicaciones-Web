<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="css/todolist.css">
  </head>
<div class="container">
    <div class="row">
      <!--FORM-->
      <div class="col-md-5 offset-md-3">
        <div class="card">
          <div class="card-body">
            <form action="/editsemanal/<%= task._id %> " method="post">
              <div class="form-group">
                 Tarea
                <input class="form-control" type="text" name="tarea" placeholder="Tarea" value="<%= task.tarea %> ">
              </div>
              <div class="form-group">
                Prioridad
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="prioridad" id="exampleRadios1" value="Alta" checked>
                <label class="form-check-label" for="exampleRadios1">
                  Alta
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="prioridad" id="exampleRadios2" value="Media">
                <label class="form-check-label" for="exampleRadios2">
                  Media
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="prioridad" id="exampleRadios3" value="Baja">
                <label class="form-check-label" for="exampleRadios2">
                  Baja
                </label>
              </div>
              <button class="btn btn-primary" type="submit">
                Editar
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>



